<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= pluralize(@user.groups.count, "Group") %>: </strong>
  <%= @user.groups.map(&:group_name).join(', ') %>
</p>

<p>
  <strong>
    <%= link_to pluralize(@user.posts.count, 'Post'), user_posts_path(@user) %>
  </strong>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Users', users_path %> |
<%= link_to 'Groups', groups_path %>
